#include "Gravity.hh"

Gravity::Gravity(Player &player) : PassiveAction(player)
{
}

bool		Gravity::request()
{
  if (_player.sy < 10)
    _speed.yDist() += 0.1;

  return (false);
}

int		Gravity::id()
{
  return (IAction::GRAVITY);
}
